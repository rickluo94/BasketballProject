<Window x:Class="First_MVVM.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:prism="http://prismlibrary.com/" FontSize="28"
        xmlns:View="clr-namespace:First_MVVM.Views"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}" Height="1024" Width="600" WindowStartupLocation="CenterScreen" >
    <i:Interaction.Triggers>
        <prism:InteractionRequestTrigger SourceObject="{Binding RegisterStepTabRequest}">
            <prism:PopupWindowAction IsModal="True" CenterOverAssociatedObject="True">
                <prism:PopupWindowAction.WindowContent>
                    <View:RegisterStepTab />
                </prism:PopupWindowAction.WindowContent>
            </prism:PopupWindowAction>
        </prism:InteractionRequestTrigger>
        <prism:InteractionRequestTrigger SourceObject="{Binding CheckOutStepTabRequest}">
            <prism:PopupWindowAction IsModal="True" CenterOverAssociatedObject="True">
                <prism:PopupWindowAction.WindowContent>
                    <View:CheckOutStepTab/>
                </prism:PopupWindowAction.WindowContent>
            </prism:PopupWindowAction>
        </prism:InteractionRequestTrigger>
        <prism:InteractionRequestTrigger SourceObject="{Binding CheckInStepTabRequest}">
            <prism:PopupWindowAction IsModal="True" CenterOverAssociatedObject="True">
                <prism:PopupWindowAction.WindowContent>
                    <View:CheckInStepTab/>
                </prism:PopupWindowAction.WindowContent>
            </prism:PopupWindowAction>
        </prism:InteractionRequestTrigger>
    </i:Interaction.Triggers>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>
        <!-- Row 1 -->
        <ContentControl Grid.Row="1" Grid.Column="1" prism:RegionManager.RegionName="ContentRegion" />
        
        <!-- Row 2 -->
        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding UpdateText}" />
        
        <!-- Row 3 -->
        <Button Grid.Row="3" Grid.Column="1" Content="租借" Width="530" Height="150" Command="{Binding CheckOutStepTabCommand}" Margin="10,10,10,10"/>

        <!-- Row 4 -->
        <Button Grid.Row="4" Grid.Column="1" Content="歸還" Width="530" Height="150" Command="{Binding CheckInStepTabCommand}" Margin="10,10,10,10"/>
        
        <!-- Row 5 -->
        <Button Grid.Row="5" Grid.Column="1" Content="註冊" Width="530" Height="150" Command="{Binding RegisterStepTabCommand}" Margin="10,10,10,10"/>

        <!-- Row 5 -->
        <Button Grid.Row="6" Grid.Column="1" Content="會員服務" Width="530" Height="150"  Margin="10,10,10,10"/>

    </Grid>
</Window>
